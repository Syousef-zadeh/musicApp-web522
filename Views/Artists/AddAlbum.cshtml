@model Assignment_6.Models.Albums.AlbumAddFormViewModel

@{
    ViewBag.Title = "AddAlbum";
}
<script src="https://cdn.ckeditor.com/4.16.0/standard/ckeditor.js"></script>
<h2>Add album for @Html.DisplayFor(model => model.ArtistName, new { htmlAttributes = new { @class = "form-control" } })</h2>


